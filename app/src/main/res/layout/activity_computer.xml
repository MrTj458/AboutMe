<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="ctec.aboutme.ComputerActivity"
    android:id="@+id/ComputerLayout"
    android:background="@drawable/pc">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I have built my own computer. Over the coarse of about 2 years I have been slowly building and upgrading my own pc. It has a GTX 980 and an overclocked i7. I have also helped Thomas build his pc."
        android:id="@+id/ComputerTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#d7931c"
        android:background="#5e5e5e" />

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/toEndFromComputer"
        android:layout_below="@+id/ComputerTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/forward_button" />
</RelativeLayout>
