<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="ctec.aboutme.CarsActivity"
    android:id="@+id/CarsBackground"
    android:background="@drawable/jeep">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I like cars. I drive a Jeep Wrangler that I bought myself. I love driving in the mountains with the top down on cool fall days."
        android:id="@+id/CarsText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:textColor="#e49227"
        android:background="#515151" />

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/toJobFromCars"
        android:layout_below="@+id/CarsText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/forward_button" />

</RelativeLayout>
