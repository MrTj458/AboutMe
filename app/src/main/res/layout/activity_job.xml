<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="ctec.aboutme.JobActivity"
    android:id="@+id/JobBackground"
    android:background="@drawable/smithslogo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I have a job! I work at a Smiths grocery store by my house as a bagger. I have worked there for about 6 months. It is a surprisingly difficult job."
        android:id="@+id/JobText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffa02d"
        android:background="#4e4e4e" />

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/toComputersFromJob"
        android:layout_below="@+id/JobText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/forward_button" />
</RelativeLayout>
